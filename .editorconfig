# EditorConfig: http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{tf,tfvars}]
indent_size = 2

[*.yml]
indent_size = 2

[*.json]
indent_size = 2

[Makefile]
indent_style = tab
